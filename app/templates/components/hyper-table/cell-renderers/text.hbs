{{#if (and emptyValue (or (not editStatus.status) isSuccess))}}
  {{#if column.upsertable}}
    Add Value
  {{else}}
    â€”
  {{/if}}
{{else}}
  <div class="editing-input">
    {{#if (and editStatus.status (not isSuccess))}}
      <div class={{if isError 'is-invalid'}}>
        {{input
          type="text" value=editableValue class="editing-input__field form-control"
          insert-newline=(action "toggleEditing" editableValue) }}
      </div>
    {{else}}
      <div data-toggle="tooltip" data-title={{value}} data-placement="bottom">
        {{value}}
      </div>
    {{/if}}
  </div>
{{/if}}


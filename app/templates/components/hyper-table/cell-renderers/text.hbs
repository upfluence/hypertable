{{#if (and emptyValue (or (not editStatus.status) (eq editStatus.status "success")))}}
  {{#if column.upsertable}}
    Add Value
  {{else}}
    â€”
  {{/if}}
{{else}}
  <div class="editing-input">
    {{#if (and editStatus.status (not-eq editStatus.status "success"))}}
      <div>
        {{input
          type="text" value=value class="editing-input__field form-control"
          focus-out=(action "toggleEditing" value)
          insert-newline=(action "toggleEditing" value) }}
      </div>
    {{else}}
      <div data-toggle="tooltip" data-title={{value}} data-placement="bottom">
        {{truncatedText}}
      </div>
    {{/if}}
  </div>
{{/if}}


{{#if (and emptyValue (or (not editStatus.status) (eq editStatus.status "success")))}}
  {{#if column.upsertable}}
    Add Value
  {{else}}
    â€”
  {{/if}}
{{else}}
  <div class="editing-input">
    {{#if (and editStatus.status (not-eq editStatus.status "success"))}}
      {{input type="text" focus-out=(action "toggleEditing" value) insert-newline=(action "toggleEditing" value) value=value class="editing-input__field form-control"}}
    {{else}}
      <span data-toggle="tooltip" data-title={{value}} data-placement="bottom">
        {{truncatedText}}
      </span>
    {{/if}}
  </div>
{{/if}}
{{!-- TODO: Extract to component --}}
{{#if column.upsertable}}
  {{#if (eq editStatus.status "success")}}
    <i class="fa fa-check padding-left-xx-sm" onclick={{action "toggleEditing"}}></i>
  {{else if (eq editStatus.status "editing")}}
    <i class="fa fa-save padding-left-xx-sm" onclick={{action "toggleEditing" value}}></i>
  {{else if (eq editStatus.status "saving")}}
    {{loading-state}}
  {{else}}
    <i class="fa fa-pencil padding-left-xx-sm" onclick={{action "toggleEditing"}}></i>
  {{/if}}
{{/if}}
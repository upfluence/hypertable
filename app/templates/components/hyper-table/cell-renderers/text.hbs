{{#if column.upsertable}}
  {{#if isSuccess}}
    <span class="text-color-success upf-icon upf-icon--check padding-left-xx-sm"></span>
  {{else if (or isEditing isError)}}
    <i class="fa fa-save padding-left-xx-sm" onclick={{action "toggleEditing" editableValue}}></i>
  {{else if isSaving}}
    {{loading-state}}
  {{else}}
    <i class="fa fa-pencil padding-left-xx-sm" onclick={{action "toggleEditing"}}></i>
  {{/if}}
{{/if}}

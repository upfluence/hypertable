<div class={{this.classes}} ...attributes>
  <div class="count-container">
    <OSS::Icon @icon="fa-users" />
    {{#if this.allCreatorsSelected}}
      <span>{{{t (concat this.intlKeyPath ".all_records_selected") count=@total}}}</span>
    {{else}}
      <span>{{t (concat this.intlKeyPath ".records_selected") count=@selected}}</span>
    {{/if}}
  </div>
  {{#unless this.allCreatorsSelected}}
    <span>-</span>
    <span class="select-all-container" role="button" {{on "click" this.onSelectAll}}>
      {{t (concat this.intlKeyPath ".select_all") count=@total}}
    </span>
  {{/unless}}
  <span>-</span>
  <span class="clear-container" role="button" {{on "click" this.onClear}}>
    {{t "hypertable.selection.clear"}}
  </span>
</div>

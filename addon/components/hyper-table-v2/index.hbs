<div class="hypertable-container" ...attributes>
  <div class="hypertable__table hypertable__table--v2">
    <div class="hypertable" {{sortable-group direction="x" onChange=this.reorderColumns}} {{on-bottom-reached @handler.onBottomReached}}>
      {{#each @handler.columns as |column index|}}
        {{#if (eq index 0)}}
          <div class="hypertable__sticky-columns">
            <HyperTableV2::Column @handler={{@handler}} @column={{column}}>
              {{#each @handler.rows as |row|}}
                <HyperTableV2::Cell
                  @handler={{@handler}} @column={{column}} @row={{row}} />
              {{/each}}

              {{#if @handler.loadingRows}}
                {{#each this.loadingSkeletons}}
                  <HyperTableV2::Cell @loading={{true}} />
                {{/each}}
              {{/if}}
            </HyperTableV2::Column>
          </div>
        {{/if}}

        {{#if (gt index 0)}}
          <HyperTableV2::Column @handler={{@handler}} @column={{column}} {{sortable-item model=column}}>
            {{#each @handler.rows as |row|}}
              <HyperTableV2::Cell
                @handler={{@handler}} @column={{column}} @row={{row}} />
            {{/each}}

            {{#if @handler.loadingRows}}
              {{#each this.loadingSkeletons}}
                <HyperTableV2::Cell @loading={{true}} />
              {{/each}}
            {{/if}}
          </HyperTableV2::Column>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>

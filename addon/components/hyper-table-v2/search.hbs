<OSS::InputContainer @value={{this.searchQuery}} @placeholder={{this.searchPlaceholder}}
                     @onChange={{this.onSearchInput}} data-control-name="table_search_input">
  <:prefix>
    <OSS::Icon @icon="fa-search" class="font-color-gray-500" />
  </:prefix>
  <:suffix>
    {{#if (gt this.searchQuery.length 0)}}
      <OSS::Icon @icon="fa-times" class="font-color-gray-500" role="button"
                 {{on "click" this.onClearSearch}} />
    {{/if}}
  </:suffix>
</OSS::InputContainer>
